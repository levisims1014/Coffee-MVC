
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<p>Please fill the form to register!</p>

<hr>

<p>
<label for="first"><b>First Name</b></label>
<input type="" placeholder="First Name" name="first" required />
</p>

<p>
<label for="last"><b>Last Name</b></label>
<input type="text" placeholder="Last Name" name="last" required />
</p>

<p>
<label for="email"><b>Email</b></label>
<input type="tel" placeholder="Enter Email" name="email" required />
</p>

<p>
<label for="number"><b>Phone Number</b></label>
<input type="text" placeholder="Enter Phone Number" name="number" required />
</p>

<p>
<label for="pswd"><b>Password</b></label>
<input type="password" placeholder="Enter Password" name="pswd" required />
</p>
<hr />
<p>
    <button type="submit">Register</button>
</p>
